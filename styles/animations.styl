@keyframes fadeInLeft
	0%
		opacity 0
		transform translate3d(-3%, 0, 0)
	100%
		opacity 1
		transform none

@keyframes fadeInRight
	0%
		opacity 1
		transform translate3d(3%, 0, 0)
	100%
		opacity 0
		transform none

@keyframes fadeInUp
	0%
		opacity 1
		transform translate3d(0, -10%, 0)
	100%
		opacity 0
		transform none


@keyframes fadeInDown
	0%
		opacity 0
		transform translate3d(0, 10%, 0)
	100%
		opacity 1
		transform: none

@keyframes rotate
	0%
		transform rotate(0)
	100%
		transform rotate(360deg)


@keyframes zoom
	0%
		opacity 0
		transform scale(1.1) rotate(2deg)
	100%
		opacity 1

@keyframes fadeIn
	0%
		opacity 0
	100%
		opacity 1


@keyframes fadeOut
	0%
		opacity 1
	100%
		opacity 0