@import 'nib'
@import 'font-awesome/stylus/index'

$fa-font-path = '../fonts'

rupture.scale = 450px 1024px 1366px 1920px
rupture.scale-names = 'phone' 'tablet' 'notebook' 'desktop'

bem($el)
	/&__{$el}
		{block}

$green = #89d222
$red = #ea1445
$blue = #00bce7
$yellow = #ffda03
$main = #010101

*
	box-sizing border-box
	&:focus
		outline 0

*:focus
	outline 0

html
	font-size 62.5%
body
	color #010101
	background #f5f5f5
	font-family 'Akrobat', "Open sans", "Helvetica Neue", Helvetica, Arial, sans-serif
	font-weight 400
	font-size 1.4em
	// line-height 1.6
	text-size-adjust 100%
	text-rendering optimizeLegibility
	-webkit-font-smoothing antialiased

img
	max-width 100%

.grid--container
	max-width 1120px

.link
	color $blue
	border-bottom 1px solid rgba($blue, .3)
	text-decoration none

.main-page
	background linear-gradient(top, #e3e3e3, #f5f5f5)
	display flex
	flex-direction column
	height 100vh

.logo
	background url('../../img/logo.png') no-repeat
	display inline-block
	height 10rem
	width 9rem

.main-header
	margin-top 4rem
	margin-bottom 1.5rem
	&__logo
		text-align center
		width 100%
	&__city
		display inline-block
	&__phone
		display inline-block
		font-size 2.4rem
	&__title
		font-size 1.8rem
		font-weight 700
		text-align center
	&__subtitle
		font-size 1.4rem
		text-align center

.main-nav
	margin-top 1rem
	&__link
		color $main
		font-size 1.5rem
		font-weight 600
		text-decoration none
		transition color .2s
		&:not(:last-child)
			margin-right 6rem
		&:hover
			color $green

.menu
	cursor pointer
	display inline-block
	float right
	&__text
		font-weight 600
		font-size 1.5rem
		margin-right 1.5rem
		display inline-block
	&__icon
		display inline-block
		vertical-align bottom
		span
			background-color $green
			display block
			height 2px
			margin-bottom 4px
			width 2.2rem

.main-content
	display flex
	align-items center
	flex 1
	&__numbers
		margin-top 5rem
		&_number
			display block
			color $red
			font-size 1.3rem
			margin-bottom 2rem
			&--active
				position relative
				&:before,
				&:after
					content ''
					display block
					position absolute
					top .6rem
					height 1px
					width 3rem
					background-color #aaa
				&:before
					left -4rem
				&:after
					left 2rem
	&__right-side
		margin-top 8rem
		p
			font-size 1.8rem
			margin-bottom 4.5rem

	&__main-text
		margin-top 5rem
		&_ico
			background url('../../img/main-1.png') no-repeat
			display block
			height 30px
			width 5rem
		&_text
			font-size 3rem
			font-weight 700
		&_number
			font-size 6rem
			font-weight 800

.btn
	border-radius 25px
	color #fff
	display inline-block
	font-size 1.2rem
	font-weight bold
	letter-spacing 3px
	text-transform uppercase
	padding 1.5rem 2.5rem
	text-decoration none
	transition background-color .2s
	&--primary
		background-color $red
		&:hover
			background-color $red - 10%

.icon
	color $main
	font-size 1.6rem !important
	line-height 3.2rem
	position relative
	text-decoration none
	&--facebook
		fa(facebook)
	&--twitter
		fa(twitter)
	&--vk
		fa(vk)
	&--instagram
		fa(instagram)

.social-icons
	align-self flex-end
	&__icon
		border 2px solid $main
		border-radius 50%
		display inline-block
		margin-right 1.5rem
		text-align center
		line-height 3rem
		height 3.2rem
		width 3.2rem
		&:hover
			border-color $blue
			& .icon
				color $blue

.slider
	&__slide
		color white
		&_img
			text-align center
			img
				display inline-block


.main-footer
	margin-bottom 3rem
	&__links
		float right
	&__copyright
		display inline-block
	&__webformula
		display inline-block
		font-weight 700
		font-size 1.2rem
		text-transform uppercase
		a
			color $main

.call-specialist
	display block
	margin-bottom 4rem
	margin-left -1rem
	&__icon
		background url('../../img/bird.png') no-repeat
		display inline-block
		height 25px
		margin-right 2rem
		vertical-align middle
		width 21px


@media(min-width 1600px)
	html
		font-size 70%