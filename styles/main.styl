@import 'nib'
@import 'font-awesome/stylus/index'

$fa-font-path = '../fonts'


@font-face
	font-family 'Amazing_Grotesk'
	src url('../fonts/Amazing_Grotesk_Demi.otf')

// rupture.scale = 450px 1024px 1366px 1600px 1920px
// rupture.scale-names = 'phone' 'tablet' 'notebook' 'desktop-middle' 'desktop'


$green = #89d222
$red = #ea1445
$blue = #00bce7
$yellow = #ffda03
$main = #010101


*
	box-sizing border-box
	debug()
	&:focus
		outline 0

*:focus
	outline 0

html
	font-size 62.5%
	width 100%
	// +above('desktop')
	// 	font-size 85%
	// +below('notebook')
	// 	font-size 50%
body
	color #010101
	background #f5f5f5
	font-family 'Akrobat', "Open sans", "Helvetica Neue", Helvetica, Arial, sans-serif
	font-weight 400
	font-size 1.4em
	// line-height 1.6
	text-size-adjust 100%
	text-rendering optimizeLegibility
	-webkit-font-smoothing antialiased
	width 100%

img
	max-width 100%

.grid--container
	max-width 1120px

.link
	color $blue
	border-bottom 1px solid rgba($blue, .3)
	text-decoration none

.text-center
	text-align center

.preloader
	display none
	position absolute
	height 100vh
	overflow hidden
	z-index 9999
	&__lense
		display block
		position fixed
		top 0
		left 0
		height 100vh
		width 100%
		&_item
			background #fff
			box-shadow 10px 0 75px rgba(#cfd4da, .35)
			border-radius 50%
			bottom 0
			display block
			left 0
			height 200vw
			margin auto
			position absolute
			right 0
			top 0
			width 200vw
			z-index 100
			&--first
				top -400%
			&--second
				top -30rem
			&--third
				top -60rem
				right 0
				left inherit


.menu
	background-color #f5f5f5
	display none
	position absolute
	top 0
	left 0
	padding-top 5rem
	width 100%
	transition visibility 1s
	z-index 300
	&__body
		z-index 10
	&--active
		display inherit
	&__circle-container
		height 100vh
		overflow hidden
		position absolute
		width 100%
	&__circle
		background-color #f5f5f5
		position absolute
		border-radius 50%
		right 22rem
		top 3rem
		width 10px
		height 10px
		transition transform .5s
		z-index 30
		&--active
			transform scale(400)
			

.sitemap
	margin-top 10rem
	&__link
		color #666
		display block
		font-size 1.5rem
		margin-bottom 2rem
		text-decoration none
		&:hover
			color $blue
		&--big
			color #000
			font-weight 600
			font-size 1.8rem
			margin-bottom 3rem

.close-container
	display block
	float right
	height 3rem
	position relative
	right 0
	top 2rem
	width 3rem

.close
	cursor pointer
	display block
	height 3rem
	position absolute
	width 3rem
	margin-top
	&:before,
	&:after
		background-color #000
		content ''
		position absolute
		right 0
		top 0
		height 2px
		width 3rem
		transform rotate(45deg)
	&:after
		transform rotate(-45deg)


.main-page
	background #f5f5f5
	display flex
	flex-direction column
	height 100vh
	position relative

.circles
	display block
	position fixed
	top 0
	left 0
	height 100vh
	width 100%
	z-index 1
	&__circle
		background #fff
		box-shadow 10px 0 75px rgba(#cfd4da, .35)
		border-radius 50%
		display block
		height 50rem
		position absolute
		margin auto
		left 0
		right 0
		top 0
		bottom 0
		width 50rem
		z-index 0
		&--first
			top -150%
			left -105%
		&--second
			bottom -115%
			left -115%
		&--third
			bottom -140%
			right -50%
			width 120rem

.menu-logo
	text-align center

.logo
	background url('../../img/logo.svg') no-repeat
	background-size cover
	display inline-block
	height 10.5rem
	width 9rem
	&--menu
		text-align center

.main-header
	margin-top 4rem
	margin-bottom 1.5rem
	z-index 1
	&__logo
		margin-bottom 1rem
		margin-top -.5rem
		text-align center
		width 100%
	&__city
		display inline-block
		margin-left 5rem
		margin-right 2.5rem
		&_text
			display inline-block
		&_icon
			vertical-align middle
			background url('../../img/angle-down.png')
			display inline-block
			height 3px
			width 5px
	&__phone
		display inline-block
		font-size 2.4rem
		font-weight 600
	&__title
		font-size 1.8rem
		font-weight 600
		font-weight bold
		text-align center
	&__subtitle
		font-size 1.4rem
		margin-left -5rem
		margin-right -5rem
		text-align center
		position relative
		z-index 20

.main-nav
	margin-top 1rem
	&__link
		color $main
		font-size 1.5rem
		font-weight 600
		text-decoration none
		transition color .2s
		&:not(:last-child)
			margin-right 5.8rem
		&:hover
			color $green

.menu-toggle
	cursor pointer
	display inline-block
	float right
	margin-top 1rem
	&__text
		font-weight 600
		font-size 1.5rem
		margin-right 1.5rem
		display inline-block
	&__icon
		display inline-block
		vertical-align bottom
		&:hover
			span:nth-child(1)
				transform scaleX(.7) translateX(20%)
			span:nth-child(3)
				transform scaleX(.5) translateX(50%)
		span
			background-color $green
			display block
			height 2px
			transition transform .2s
			width 2.2rem
			margin-bottom 4px

.main-content
	display flex
	align-items center
	flex 1
	flex-wrap wrap
	position relative
	z-index 1
	.slide
		// display none
		margin-bottom 0
		position absolute
		top 0
		left 0
		right 0
		margin auto
		&--active
			// display inherit
	&__numbers
		margin-top 7.5rem
		&_number
			display block
			color $red
			cursor pointer
			font-size 1.3rem
			margin-bottom 1.5rem
			&--active
				position relative
				&:before,
				&:after
					content ''
					display block
					position absolute
					top .7rem
					height 1px
					width 3rem
					background-color #aaa
				&:before
					left -4rem
				&:after
					left 2rem
	&__right-side
		margin-top 5rem
		width 22rem
		opacity 0
		animation fadeInUp 1s
		&_text
			margin-bottom 3rem
			overflow hidden
		p
			// animation fadeInUp .4s .8s forwards
			// opacity 0
			font-size 1.8rem
			font-weight 600
			margin-bottom 2rem
			// opacity 0

	&__main-text
		margin-top 7rem
		opacity 0
		animation fadeInRight .8s
		span
			display block
			// opacity 0
			// animation fadeInUp .5s .5s forwards
		&_ico
			background url('../../img/machine.svg') no-repeat
			background-size cover
			// display block
			height 5rem
			margin-top 1rem
			opacity 0
			width 5rem
			transform scaleX(-1)
			animation fadeIn 1s ease-out .3s forwards
		&_text
			font-size 3rem
			font-weight 700
			// animation fadeInUp .4s ease-out .4s forwards
		&_number
			font-size 6rem
			font-weight 800
			// animation fadeInUp .4s ease-out .5s forwards


.main-img
	margin 0 auto
	width 37rem
	// animation zoom .4s ease-in
	animation fadeOut 1.5s forwards
	opacity 0
	&__img
		text-align center
		transition transform .2s
		img
			max-width 100%
			display inline-block


.slide--active
	.main-img
		animation fadeIn 1.5s forwards
	.main-content__right-side
		animation fadeInDown 1s .5s forwards
	.main-content__main-text
		animation fadeInLeft .8s .5s forwards

.btn
	border-radius 25px
	color #fff
	display inline-block
	font-size 1.2rem
	font-family 'verdana'
	font-weight 600
	text-transform uppercase
	padding 1.5rem 2.5rem
	text-decoration none
	// animation fadeInUp .6s 1.2s forwards
	// opacity 0
	transition box-shadow .3s
	&--primary
		background-color $red
		&:hover
			background linear-gradient(top, $red, $red - 2%)
			box-shadow 0 5px 20px rgba($red, .2) 

.icon
	color $main
	font-size 1.6rem !important
	line-height 3.2rem
	position relative
	text-decoration none
	&--facebook
		fa(facebook)
	&--twitter
		fa(twitter)
	&--vk
		fa(vk)
	&--instagram
		fa(instagram)

.social-icons
	align-self flex-end
	&__icon
		border 2px solid $main
		border-radius 50%
		display inline-block
		margin-right 1.5rem
		text-align center
		line-height 3rem
		height 3.2rem
		width 3.2rem
		&:hover
			border-color $blue
			& .icon
				color $blue

.slick
	&-dots
		& li
			button
				&:before
					font-size 4px
			&.slick-active
				button
					border 2px solid $yellow
					border-radius 50%

.main-footer
	margin-bottom 5.5rem
	z-index 1
	&__links
		float right
	&__copyright
		display inline-block
	&__webformula
		display inline-block
		font-weight 700
		font-size 1.2rem
		text-transform uppercase
		a
			color $main

.call-specialist
	display block
	margin-bottom 4rem
	margin-right 9rem
	float right
	&__icon
		background url('../../img/bird.png') no-repeat
		display inline-block
		height 25px
		margin-right 1rem
		vertical-align middle
		width 21px
	&__link
		font-size 1.8rem
		font-weight 600

@keyframes fadeInLeft
	0%
		opacity 0
		transform translate3d(-3%, 0, 0)
	100%
		opacity 1
		transform none

@keyframes fadeInRight
	0%
		opacity 1
		transform translate3d(3%, 0, 0)
	100%
		opacity 0
		transform none

@keyframes fadeInUp
	0%
		opacity 1
		transform translate3d(0, -10%, 0)
	100%
		opacity 0
		transform none


@keyframes fadeInDown
	0%
		opacity 0
		transform translate3d(0, 10%, 0)
	100%
		opacity 1
		transform: none

@keyframes rotate
	0%
		transform rotate(0)
	100%
		transform rotate(360deg)


@keyframes zoom
	0%
		opacity 0
		transform scale(1.1) rotate(2deg)
	100%
		opacity 1

@keyframes fadeIn
	0%
		opacity 0
	100%
		opacity 1


@keyframes fadeOut
	0%
		opacity 1
	100%
		opacity 0


@media(max-width 800px)
	html
		font-size 40%
	.grid--container
		max-width 90% !important
	.circles
		display none
	.main-header
		&__logo
			text-align left
	.menu-logo
		text-align left
	.menu-toggle
		float right
		margin-top 3rem
		&__text
			font-size 3rem
	.main-header
		margin-top 1rem
	.main-img
		width 100%
	.main-content
		display block
		&__main-text_ico
			&-container
				align-items flex-end
				display flex
				height 100%
			height 7rem
			width 7rem
	.main-content__right-side
		width inherit
	.main-nav
		display none
	.main-header
		&__title
			display none
		&__subtitle
			display none
		&__phone
			display none
		&__city
			display none
	.main-content
		&__numbers
			display none
		&__right-side
			text-align center
			p
				font-size 3rem
				text-align left
			.btn
				font-size 2rem
	.sitemap
		margin-top 5rem
	.social-icons
		margin 5rem 0
		text-align center
	.icon
		font-size 2.5rem !important
		line-height 4.5rem
	.social-icons__icon
		height 5rem
		width 5rem
	.call-specialist
		margin 0
		float none
	.main-footer
		padding-bottom 5rem
	



@media(max-width 1200px)
	html
		font-size 55%
	.grid--container
		max-width 950px
	.circles
		display none
	.call-specialist
		margin-right 0

@media(min-width 1700px)
	html
		font-size 80%
	.grid--container
		max-width 1750px

@media(min-width 2300px)
	html
		font-size 100%
	.grid--container
		max-width 2200px